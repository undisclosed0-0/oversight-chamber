<body>
  <div class="container">
    <h1>Prestige Triumph Transaction Ledger</h1>
    <div id="transactionList"></div>
    <button class="back-button" onclick="window.location.href='index.html'">Return to Main Chamber</button>
  </div>

  <script>
    const registry = JSON.parse(localStorage.getItem('userRegistry')) || {};
    const history = JSON.parse(localStorage.getItem('transactionHistory')) || [];

    const list = document.getElementById('transactionList');

    if (history.length === 0) {
      list.innerHTML = `<p>No transactions recorded in the system.</p>`;
    } else {
      history.forEach(tx => {
        const entry = document.createElement('div');
        entry.className = 'transaction-entry';

        const fromName = registry[tx.from]?.card ? tx.from : tx.from;
        const toName = registry[tx.to]?.card ? tx.to : tx.to;

        entry.innerHTML = `
          <strong>From:</strong> ${fromName}<br>
          <strong>To:</strong> ${toName}<br>
          <strong>Amount:</strong> $${tx.amount.toFixed(2)}
          <div class="meta">Time: ${new Date(tx.time).toLocaleString()}</div>
        `;
        list.appendChild(entry);
      });
    }
  </script>
</body>
